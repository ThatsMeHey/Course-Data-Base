<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hotels.HotelsFinanceAnalysisController">
    <top>
        <HBox>
            <Button text="Назад" onAction="#onBackButtonClick"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <TableView fx:id="hotelsFinanceAnalysisTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="№" prefWidth="50" fx:id="hRowNumber" sortable="false"/>

                    <TableColumn text="Код гостинницы" prefWidth="100" fx:id="code"/>
                    <TableColumn text="Название гостинницы" prefWidth="150" fx:id="name"/>
                    <TableColumn text="Комнат всего" prefWidth="150" fx:id="totalRooms"/>
                    <TableColumn text="Максимальный потенциальный дневной доход" prefWidth="150" fx:id="potentialIncome"/>
                    <TableColumn text="Средняя плата за комнату" prefWidth="150" fx:id="avgRoomPrice"/>
                    <TableColumn text="Минимальная плата за комнату" prefWidth="150" fx:id="minRoomPrice"/>
                    <TableColumn text="Максимальная плата за комнату" prefWidth="150" fx:id="maxRoomPrice"/>
                    <TableColumn text="Текущий дневной доход" prefWidth="150" fx:id="currentIncome"/>
                    <TableColumn text="Количество рабочих" prefWidth="150" fx:id="totalStaff"/>
                    <TableColumn text="Количество должностей" prefWidth="150" fx:id="uniquePosCount"/>
                </columns>
            </TableView>

            <TableView fx:id="hotelsFinanceAnalysisResultTable" prefHeight="100" maxHeight="100">
                <columns>
                    <TableColumn text="№" prefWidth="50" fx:id="hRowNumberR" sortable="false"/>

                    <TableColumn text="-" prefWidth="100" fx:id="codeR"/>
                    <TableColumn text="-" prefWidth="150" fx:id="nameR"/>
                    <TableColumn text="Комнат всего" prefWidth="150" fx:id="totalRoomsR"/>
                    <TableColumn text="Общий максимальный потенциальный дневной доход" prefWidth="150" fx:id="potentialIncomeR"/>
                    <TableColumn text="Средняя плата за комнату среди всех" prefWidth="150" fx:id="avgRoomPriceR"/>
                    <TableColumn text="Минимальная плата за комнату среди всех" prefWidth="150" fx:id="minRoomPriceR"/>
                    <TableColumn text="Максимальная плата за комнату среди всех" prefWidth="150" fx:id="maxRoomPriceR"/>
                    <TableColumn text="Текущий общий дневной доход" prefWidth="150" fx:id="currentIncomeR"/>
                    <TableColumn text="Количество рабочих во всех гостинницах" prefWidth="150" fx:id="totalStaffR"/>
                    <TableColumn text="Количество должностей во всех гостинницах" prefWidth="150" fx:id="uniquePosCountR"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
