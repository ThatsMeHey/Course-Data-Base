<?xml version="1.0" encoding="UTF-8"?>

<!-- Окно с гостинницами -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hotels.JobsController">
    <top>
        <HBox>
            <Button text="Назад" onAction="#onBackButtonClick"/>
            <Button text="Добавить" onAction="#addNew"/>
            <Button text="Фильтры" onAction="#openFilters"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="positionsTable">
            <columns>
                <TableColumn text="№" prefWidth="50" fx:id="jRowNumber" sortable="false"/>

                <TableColumn text="Код должности" prefWidth="100" fx:id="jCode"/>
                <TableColumn text="Название" prefWidth="150" fx:id="jName"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
