<?xml version="1.0" encoding="UTF-8"?>

<!-- Окно с гостинницами -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hotels.HotelsStatsController">
    <top>
        <HBox>
            <Button text="Назад" onAction="#onBackButtonClick"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <TableView fx:id="hotelStatsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="№" prefWidth="50" fx:id="hRowNumber" sortable="false"/>

                    <TableColumn text="Код гостинницы" prefWidth="100" fx:id="code"/>
                    <TableColumn text="Название гостинницы" prefWidth="150" fx:id="name"/>
                    <TableColumn text="Количество работников" prefWidth="150" fx:id="staffCount"/>
                    <TableColumn text="Комнат всего" prefWidth="150" fx:id="totalRooms"/>
                    <TableColumn text="Свободные комнаты" prefWidth="150" fx:id="availableRooms"/>
                    <TableColumn text="Текущие посетители" prefWidth="150" fx:id="currentVisitors"/>
                </columns>
            </TableView>

            <TableView fx:id="hotelStatsResultTable" prefHeight="100" maxHeight="100">
                <columns>
                    <TableColumn text="-" prefWidth="50" fx:id="hRowNumberR" sortable="false"/>

                    <TableColumn text="-" prefWidth="100" fx:id="codeR"/>
                    <TableColumn text="-" prefWidth="150" fx:id="nameR"/>
                    <TableColumn text="Всего работников" prefWidth="150" fx:id="staffCountR"/>
                    <TableColumn text="Комнат всего" prefWidth="150" fx:id="totalRoomsR"/>
                    <TableColumn text="Всего свободных комнат" prefWidth="150" fx:id="availableRoomsR"/>
                    <TableColumn text="Всего посетителей" prefWidth="150" fx:id="currentVisitorsR"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
